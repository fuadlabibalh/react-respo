{
  "name": "react-easy-responsive",
  "version": "2.1.15",
  "description": "A powerful yet simple React library designed to make responsive can adapt seamlessly to any device, providing a smooth, consistent user experience.",
  "author": "fuadlabibalh",
  "license": "MIT",
  "keywords": [
    "react-responsive",
    "react-component",
    "responsive-design",
    "css-generator",
    "react",
    "responsive",
    "latest"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./style_sheet": {
      "require": "./dist/cjs/style_sheet/index.js",
      "import": "./dist/esm/style_sheet/index.js"
    },
    "./device_screen": {
      "require": "./dist/cjs/device_screen/index.js",
      "import": "./dist/esm/device_screen/index.js"
    }
  },
  "scripts": {
    "build:cjs": "rm -rf ./dist && tsc --outDir ./dist/cjs --module commonjs --declarationDir ./dist/cjs",
    "build:esm": "rm -rf ./dist && tsc --outDir ./dist/esm --module esnext --declarationDir ./dist/esm",
    "build": "npm run build:cjs && npm run build:esm"
  },
  "devDependencies": {
    "@types/react": "^18.1.1",
    "@types/react-dom": "^18.1.1",
    "react": "^18.1.1",
    "react-dom": "^18.1.1",
    "typescript": "^5.1.1"
  },
  "peerDependencies": {
    "react": "^18.1.1",
    "react-dom": "^18.1.1",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fuadlabibalh/react-respo.git"
  }
}